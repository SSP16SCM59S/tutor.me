<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zsoltpazmandy.tutorme.LearningTab"
    tools:showIn="@layout/activity_learning_tab">


    <Button
        android:id="@+id/viewLibButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/view_lib_butt" />

    <View
        android:id="@+id/learning_tab_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/viewLibButt"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/learning_tab_currently_learning_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/learning_tab_horizontal"
        android:text="@string/i_m_currently_learning"
        android:textSize="@dimen/profile_setup_text_size" />


    <ListView
        android:id="@+id/learning_tab_currently_learning_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/learning_tab_currently_learning_top"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

</RelativeLayout>
