<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zsoltpazmandy.tutorme.ProfileTab"
    tools:showIn="@layout/activity_profile_tab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/darker_gray"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:src="@mipmap/profile_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit_profile_butt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile_but" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/account_settings_butt"
                    android:text="@string/account_settings_butt"/>

                <Button
                    android:id="@+id/logoout_butt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_butt" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="8"
            android:weightSum="1">

            <TextView
                android:id="@+id/profile_tab_textview_username"
                android:layout_column="0"
                android:layout_columnWeight="0.5"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="1"
                android:text="@string/username_label"
                android:textAlignment="textEnd"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_username"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="1"
                android:textSize="@dimen/profile_setup_text_size" />

            <TextView
                android:id="@+id/profile_tab_textview_rating"
                android:layout_column="0"
                android:layout_columnWeight="0.5"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="2"
                android:text="@string/rating_label"
                android:textAlignment="textEnd"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_rating"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="2"
                android:textSize="@dimen/profile_setup_text_size" />

            <TextView
                android:id="@+id/profile_tab_textview_location"
                android:layout_column="0"
                android:layout_columnWeight="0.5"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="3"
                android:text="@string/location_label"
                android:textAlignment="textEnd"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_location"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="3"
                android:textSize="@dimen/profile_setup_text_size" />

            <TextView
                android:id="@+id/profile_tab_textview_language1"
                android:layout_column="0"
                android:layout_columnWeight="0.5"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="4"
                android:text="@string/languages1_label"
                android:textAlignment="textEnd"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_language1"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="4"
                android:textSize="@dimen/profile_setup_text_size" />

            <TextView
                android:id="@+id/profile_tab_textview_language2"
                android:layout_column="0"
                android:layout_columnWeight="0.5"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="5"
                android:text="@string/languages2_label"
                android:textAlignment="textEnd"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_language2"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="5"
                android:textSize="@dimen/profile_setup_text_size" />

            <TextView
                android:id="@+id/profile_tab_textview_language3"
                android:layout_column="0"
                android:layout_columnWeight="0.5"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="6"
                android:text="@string/languages3_label"
                android:textAlignment="textEnd"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_language3"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="6"
                android:textSize="@dimen/profile_setup_text_size" />

            <TextView
                android:id="@+id/profile_tab_textview_age"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_gravity="end"
                android:layout_columnWeight="0.5"
                android:layout_height="wrap_content"
                android:text="@string/age_label"
                android:textSize="@dimen/profile_setup_text_size" />

            <EditText
                android:id="@+id/profile_tab_edittext_age"
                android:layout_column="1"
                android:layout_columnWeight="0.5"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_row="7"
                android:textSize="@dimen/profile_setup_text_size" />

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/darker_gray"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/profile_tab_textview_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:text="@string/interests_check_label"
            android:textSize="@dimen/profile_setup_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/language_check"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/languages_check_label" />

            <CheckBox
                android:id="@+id/travel_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/travelling_check_label" />

            <CheckBox
                android:id="@+id/sports_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/sports_check_label" />

            <CheckBox
                android:id="@+id/history_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/history_check_label" />

            <CheckBox
                android:id="@+id/music_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/music_check_label" />

            <CheckBox
                android:id="@+id/science_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/science_check_label" />

            <CheckBox
                android:id="@+id/arts_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/arts_check_label" />

            <CheckBox
                android:id="@+id/food_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/food_check_label" />

            <CheckBox
                android:id="@+id/health_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/health_check_label" />

            <CheckBox
                android:id="@+id/computers_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/computers_check_label" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
