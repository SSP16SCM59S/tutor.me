<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditSelectedModule"
    tools:showIn="@layout/activity_edit_selected_module">

    <LinearLayout
        android:id="@+id/edit_selected_module_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_selected_module_top_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Name of module"
                android:maxLength="60"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <Button
                android:id="@+id/edit_selected_change_module_name_butt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="Change"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_selected_module_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="80"
                android:padding="@dimen/activity_vertical_margin"
                android:text="Description of module"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:layout_alignParentLeft="true" />

            <Button
                android:id="@+id/edit_selected_change_module_desc_butt"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Edit"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Slides"/>

        <LinearLayout
            android:id="@+id/edit_selected_module_buttons_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">



            <Button
                android:id="@+id/edit_selected_module_add_slide_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add" />

            <Button
                android:id="@+id/edit_selected_module_edit_slides_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit" />

            <Button
                android:id="@+id/edit_selected_module_move_slides_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move" />

            <Button
                android:id="@+id/edit_selected_module_del_slide_butt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/edit_selected_module_slides_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/edit_module_select_slide_to_edit_hint"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/edit_selected_save_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="true"
        android:text="Save"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/edit_selected_discard_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:text="Discard"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/button_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/edit_selected_save_butt"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/edit_selected_module_slideslist_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_divider"
        android:layout_below="@id/edit_selected_module_ll"
        android:background="@drawable/selector"
        android:drawSelectorOnTop="false">

    </ListView>


</RelativeLayout>
